package geometria;

public class Triangulo {

	// Atributos
	private double base;
	private double altura;

	// Métodos
	public void setBase(double base) {
		if (base > 0) {
			this.base = base;
		}
	}

	public void setAltura(double altura) {
		if (altura > 0) {
			this.altura = altura;
		}
	}

	public double calculaArea() {
		double area = (base * altura) / 2;

		return area;
	}
	
	// Esta função desenha um triângulo (pirâmide)
	// Para isso, devemos saber o número de pontos a ser utilizado na base,
	// multiplicar por dois (porque o triângulo está centralizado,
	// formando dois triângulos, um de cada lado, que será preenchido por espaços vazios) e subtraído 2
	// (os pontos da base que fazem parte dos triângulos laterais)
	// Enquanto o valor de i for menor que a base, o loop continuará
	// Enquanto o valor de j for menor que os espaços, o loop continuará
	public void desenhar() {
		double espacos = base * 2 - 2;
		
		for (double i = 0; i < base; i++) {
			for (double j = 0; j < espacos; j++) {
				System.out.print(" ");
			}
			espacos = espacos - 1;
			for (double j = 0; j <= i; j++) {
				System.out.print(". ");
			}
			System.out.println();
		}
	}
}

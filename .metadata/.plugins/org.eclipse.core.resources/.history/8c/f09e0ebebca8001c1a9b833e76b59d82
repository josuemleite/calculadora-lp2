package geometria;

public class Circulo {

	// Atributos
	private double raio;
	
	// Métodos
	public void setRaio(double raio) {
		if (raio > 0) {
			this.raio = raio;
		}
	}
	
	public double calculaArea() {
		double area = Math.PI * raio * raio;
		
		return area;
	}
	
	public void desenhar() {
		for (int i = 0; i < 2*raio; i++) {
			System.out.print(".");
			
			for (int j = 2*raio - 2; j < 2*raio; j++) {
				
			}
		}
	}
}

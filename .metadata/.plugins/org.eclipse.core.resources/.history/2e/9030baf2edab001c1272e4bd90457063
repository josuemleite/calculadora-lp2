package geometria;

public class Triangulo {

	// Atributos
	private double base;
	private double altura;

	// Métodos
	public void setBase(double base) {
		if (base > 0) {
			this.base = base;
		}
	}

	public void setAltura(double altura) {
		if (altura > 0) {
			this.altura = altura;
		}
	}

	public double calculaArea() {
		double area = (base * altura) / 2;

		return area;
	}
	
	// Esta função desenha um triângulo (pirâmide)
	// Para isso, devemos saber o número de pontos a ser utilizado na base,
	// multiplicar por dois (porque o triângulo está centralizado,
	//formando dois triângulos, um de cada lado, que será preenchido por espaços vazios)
	public void desenhar() {
		for (double i = 0; i < altura; i++) {
			for (double j = 0; j <= i; j++) {
				System.out.print(". ");
			}
			System.out.println();
		}
	}
}
